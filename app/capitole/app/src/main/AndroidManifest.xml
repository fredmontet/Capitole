<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobop.capitole">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Capitole"
        android:allowBackup="true"
        android:icon="@drawable/capitole_logo"
        android:label="@string/app_name"
        android:theme="@style/CapitoleTheme">
        <activity
            android:name=".presentation.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activity.MovieDetailActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName=".presentation.activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.activity.MainActivity" />
        </activity>
        <activity
            android:name=".presentation.activity.SuggestionDetailActivity"
            android:label="@string/title_activity_movie"
            android:uiOptions="splitActionBarWhenNarrow"
            android:parentActivityName=".presentation.activity.MainActivity">
            <!-- To support below API Level 14 -->
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.activity.MainActivity" />
        </activity>
    </application>

</manifest>
